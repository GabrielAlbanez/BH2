// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Usuario {
  cpf        String      @id 
  nome      String
  email     String   @unique
  senha     String
  sexo      String
  endereco  String
  rifas     Rifa[]
  tipo      String
}

model Ong {
  id          Int         @id @default(autoincrement())
  nome        String
  endereco    String?
  rifas       Rifa[]
  Voluntarios Voluntarios[]
  trabalhos   Trabalho[]
}

model Voluntarios {
  cpf      String      @id 
  nome    String
  idOng   Int
  ong     Ong      @relation(fields: [idOng], references: [id])
}

model Trabalho {
  id     Int      @id @default(autoincrement())
  nome   String
  descricao String?
  idOng  Int
  ong    Ong      @relation(fields: [idOng], references: [id])
}

model Rifa {
  id         Int      @id @default(autoincrement())
  nome       String
  preco      Decimal
  descricao  String?
  CpfUsuario  String
  idOng      Int?
  usuario    Usuario  @relation(fields: [CpfUsuario], references: [cpf])
  ong        Ong?     @relation(fields: [idOng], references: [id])
}
